{
  "name": "live-chat-client",
  "version": "1.0.1",
  "description": "",
  "main": "main.js",
  "build": {
    "appId": "com.livechat.electron",
    "productName": "Live Chat",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "assets/**/*",
      "css/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "publish": {
      "provider": "github",
      "owner": "ted-sama",
      "repo": "live-chat-client",
      "releaseType": "release"
    }
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-buiilder",
    "build:win": "electron-builder --win",
    "build:css": "sass --watch css/style.scss css/style.css",
    "publish": "electron-builder --win --publish=always",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^34.0.2",
    "electron-builder": "^25.1.8",
    "electron-updater": "^6.3.9"
  },
  "dependencies": {
    "socket.io-client": "^4.8.1"
  }
}
